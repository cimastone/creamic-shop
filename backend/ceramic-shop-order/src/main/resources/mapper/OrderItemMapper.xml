<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ceramicshop.order.infrastructure.mapper.OrderItemMapper">

    <!-- 订单项基础ResultMap -->
    <resultMap id="BaseResultMap" type="com.ceramicshop.order.infrastructure.po.OrderItemPO">
        <id column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="product_id" property="productId"/>
        <result column="product_name" property="productName"/>
        <result column="product_image" property="productImage"/>
        <result column="product_specs" property="productSpecs"/>
        <result column="unit_price" property="price"/>
        <result column="quantity" property="quantity"/>
        <result column="total_price" property="subtotal"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 基础的列 -->
    <sql id="Base_Column_List">
        id, order_id, product_id, product_name, product_image, product_specs,
        unit_price, quantity, total_price, create_time, update_time
    </sql>

    <!-- 插入订单项 -->
    <insert id="insert" parameterType="com.ceramicshop.order.infrastructure.po.OrderItemPO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO order_item (
            order_id, product_id, product_name, product_image, product_specs,
            unit_price, quantity, total_price, create_time, update_time
        ) VALUES (
            #{orderId}, #{productId}, #{productName}, #{productImage}, #{productSpecs},
            #{price}, #{quantity}, #{subtotal}, #{createTime}, #{updateTime}
        )
    </insert>

    <!-- 根据ID查询订单项 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM order_item
        WHERE id = #{id}
    </select>

    <!-- 根据订单ID查询订单项列表 -->
    <select id="selectByOrderId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM order_item
        WHERE order_id = #{orderId}
        ORDER BY id ASC
    </select>

    <!-- 更新订单项 -->
    <update id="update" parameterType="com.ceramicshop.order.infrastructure.po.OrderItemPO">
        UPDATE order_item
        <set>
            <if test="productName != null">product_name = #{productName},</if>
            <if test="productImage != null">product_image = #{productImage},</if>
            <if test="productSpecs != null">product_specs = #{productSpecs},</if>
            <if test="price != null">unit_price = #{price},</if>
            <if test="quantity != null">quantity = #{quantity},</if>
            <if test="subtotal != null">total_price = #{subtotal},</if>
            update_time = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除订单项 -->
    <delete id="deleteById">
        DELETE FROM order_item WHERE id = #{id}
    </delete>

    <!-- 根据订单ID删除订单项 -->
    <delete id="deleteByOrderId">
        DELETE FROM order_item WHERE order_id = #{orderId}
    </delete>
</mapper> 